<!DOCTYPE html>
<html>
    <head>
        <title>[% page.title %] - World of Tanks Replays</title>
        <link rel="shortcut icon" href="//static.wot-replays.org/img/favicon.ico"/>
        <script type="text/javascript" src="//static.wot-replays.org/js/jquery-1.6.2-min.js"></script>
        <script type="text/javascript" src="//static.wot-replays.org/js/jquery.form.js"></script>
        <script type="text/javascript" src="//static.wot-replays.org/js/jstz.min.js"></script>
        <script type="text/javascript" src="//static.wot-replays.org/js/jquery.blockUI.js"></script>
        <script type="text/javascript" src="//static.wot-replays.org/js/wr.js"></script>
        <link rel="stylesheet" href="//static.wot-replays.org/css/style.css"/>
        <meta name="keywords" content="[% page.keywords %], world of tanks replays, wot replays, replays"/>
        [% IF page.description %]
            <meta name="description" content="[% page.description |html %]"/>
        [% END %]
        [% INCLUDE bricks/ga.js.tt %]
        <script type="text/javascript">
            $(document).ready(function() {
                $('button.panelButton.download').live('click', function() {
                    var c = parseInt($(this).find('span.count').html());
                    $(this).find('span.count').html(c + 1);
                    var href = $(this).attr('href');
                    WR.trackEvent('Replay','Download', href);
                });
                $('button.panelButton.view').live('click', function() {
                    var c = parseInt($(this).find('span.count').html());
                    $(this).find('span.count').html(c + 1);
                });
                var _tz = jstz.determine_timezone();
                WR.timezone = {
                    offset: _tz.offset(),
                    name: _tz.name(),
                    isdst: _tz.dst(),
                };
                $('span.WR_tz_name').html(WR.timezone.name);
                $('span.WR_tz_offset').html('GMT ' + WR.timezone.offset);
                $('a.rateUp').live('click', function() {
                    $(this).prop('disabled', true);
                    var rid = $(this).attr('rid');
                    var s = this;
                    $.getJSON('/replay/' + rid + '/up', {}, function(d) {
                        if(d.baru) {
                            WR.trackEvent('Replay','Rate Up', rid);
                        } else if(d.sudah) {
                            WR.trackEvent('Replay','Rate Up (Repeat)', rid);
                        }
                        $(s).find('span.rateUpCount').html(d.c);
                        $(s).prop('disabled', false);
                    });
                    return false;
                });
            });
        </script>
    </head>
    <body class="ui">
        [% INCLUDE nav.html.tt %]
        <div class="clear"></div>
        <div id="container">
            <div id="contentMain">
                [% content %]
            </div>
        </div>
        <div id="footer">
        </div>
    </body>
</html>
