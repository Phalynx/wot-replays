[% pname = player.player.name %]
[% platoon = platoons.$pname %]
[% fitting = player.vehicle.fitting %]
[% IF player.stats.deathReason == -1 %]
    [% class = 'survived' %]
[% ELSE %]
    [% class = 'died' %]
[% END %]
<tr>
    <td></td>
    <td class="playerVehicle" style="background: transparent url([% config.urls.assets %]/vehicles/48/[% player.vehicle.icon %]) no-repeat scroll center center" title="[% player.vehicle.label |html %]">
        <div class="playerHealth">
            [% totalhealth = player.health.total %]
            [% hp = h.percentage_of(totalhealth, player.health.remaining) %]
            [% bs = h.sprintf('%d', (74 / 100) * hp) %]
            [% IF bs < 1 %][% bs = 1 %][% END %]
            <div class="health" style="width: [% bs %]px"></div>
            <div class="healthnumbers">[% player.health.remaining %]/[% totalhealth %]</div>
        </div>
    </td>
    <td class="bs-tooltip playerName" title="[% player.player.name |html %]" data-placement="auto" data-toggle="tooltip" data-container="body">
        [% IF player.player.clanDBID > 0 %]
            [% player.player.name |truncate(12)|html %]<span class="clan">[[% player.player.clanAbbrev %]]</span>
        [% ELSE %]
            [% player.player.name |truncate(12)|html %]
        [% END %]
    </td>
    <td class="playerRating">
        <div title="Player overall WN7" data-placement="auto" data-toggle="tooltip" data-container="body" class="bs-tooltip wn7 [% IF player.wn7.available %][% h.wn7_color(player.wn7.data.overall) %][% ELSE %]notavailable[% END %] rounded" style="padding: 2px; margin: 0px; font-weight: bold; text-align: center">[% IF player.wn7.available %]<a class="wn7 [% h.wn7_color(player.wn7.data.overall) %]" href="http://statterbox.com/[% h.fix_server(replay.game.server) %]/[% player.player.name |uri %]">[% player.wn7.data.overall %]</a>[% ELSE %]-[% END %]</div>
    </td>
    <td class="playerDetails">
        [% FOREACH award IN player.stats.achievements.nsort %]
            [% IF h.get_achievements.is_battle(award) || h.get_achievements.is_repeatable(award) %]
                <img src="[% config.urls.assets %]/icon/awards/24/[% h.get_achievements.index_to_idstr(award) %].png" style="height: 24px;" alt="[% h.get_achievements.i18n(h.res.achievements.index_to_idstr(award)) |html %]" title="[% h.get_achievements.i18n(h.get_achievements.index_to_idstr(award)) |html %]"/>
            [% END %]
        [% END %]
    </td>
    <td class="playerDamage"><span class="green">[% player.stats.damageDealt %]</td>
    <td class="playerXP"><span class="green" title="Player earned [% player.stats.xp %] xp not including bonuses and premium multipliers">[% player.stats.xp %]</span></td>
    <td class="playerFrags [% IF player.stats.kills > 0 %]green[% ELSIF player.stats.kills < 0 %]red[% END %]">[% player.stats.kills || '0' %]</td>
</tr>
